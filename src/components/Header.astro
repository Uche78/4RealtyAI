---
// Header component
---
<header id="header" class="bg-[#262626] z-50 fixed top-0 w-full transition-all duration-300">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 sm:h-20">
      <!-- Logo -->
      <div class="flex items-center z-50">
        <a href="/" class="flex items-center space-x-2">
          <img src="/Logo6.svg" alt="4RealtyAI Logo" class="w-auto h-10 sm:h-12">
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8 z-50">
        <a href="#who" class="text-brand-primary hover:text-slate-100 font-medium transition-colors">Who we are</a>
        <a href="#what" class="text-brand-primary hover:text-slate-100 font-medium transition-colors">What we offer</a>
        <a href="#why" class="text-brand-primary hover:text-slate-100 font-medium transition-colors">Why us</a>
        <a href="#faq" class="text-brand-primary hover:text-slate-100 font-medium transition-colors">Faqs</a>
        <a href="#contact" class="bg-brand-primary text-charcoal-700 px-6 lg:px-8 py-2 rounded-full border-2 border-brand-primary hover:bg-transparent hover:text-brand-primary font-medium transition-colors">Schedule a Free Consultation</a>
      </div>
      
      <!-- Mobile menu button -->
      <button 
        type="button" 
        class="mobile-menu-button md:hidden text-brand-primary hover:text-slate-100 focus:outline-none focus:ring-2 focus:ring-brand-primary focus:ring-offset-2 focus:ring-offset-transparent rounded-lg p-2 z-50 relative"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <!-- Hamburger Icon -->
        <svg class="hamburger-icon w-6 h-6 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path class="line-1" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16" />
          <path class="line-2" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 12h16" />
          <path class="line-3" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 18h16" />
        </svg>
        <!-- Close Icon (hidden by default) -->
        <svg class="close-icon w-6 h-6 absolute top-2 left-2 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>
    
    <!-- Mobile Navigation Overlay -->
    <div class="mobile-menu fixed inset-0 bg-charcoal-800 bg-opacity-95 backdrop-blur-lg transform translate-x-full transition-transform duration-300 ease-in-out md:hidden z-40">
      <div class="flex flex-col h-full pt-24 px-6 pb-6">
        <!-- Mobile Menu Links -->
        <nav class="flex-1 space-y-2">
          <a 
            href="#who" 
            class="mobile-menu-link block px-4 py-4 text-brand-primary hover:bg-slate-700 hover:text-white rounded-lg font-medium text-lg transition-all duration-200 border-b border-slate-700"
          >
            Who we are
          </a>
          <a 
            href="#what" 
            class="mobile-menu-link block px-4 py-4 text-brand-primary hover:bg-slate-700 hover:text-white rounded-lg font-medium text-lg transition-all duration-200 border-b border-slate-700"
          >
            What we offer
          </a>
          <a 
            href="#why" 
            class="mobile-menu-link block px-4 py-4 text-brand-primary hover:bg-slate-700 hover:text-white rounded-lg font-medium text-lg transition-all duration-200 border-b border-slate-700"
          >
            Why us
          </a>
          <a 
            href="#faq" 
            class="mobile-menu-link block px-4 py-4 text-brand-primary hover:bg-slate-700 hover:text-white rounded-lg font-medium text-lg transition-all duration-200 border-b border-slate-700"
          >
            Faqs
          </a>
        </nav>
        
        <!-- Mobile CTA Button -->
        <div class="mt-auto pt-6 border-t border-slate-700">
          <a 
            href="#contact" 
            class="block w-full bg-brand-text text-brand-primary px-6 py-4 rounded-full hover:bg-brand-secondary hover:text-brand-primary font-medium text-center text-lg transition-all duration-200 shadow-lg"
          >
            Book a Call
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const menuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');
    const hamburgerIcon = document.querySelector('.hamburger-icon');
    const closeIcon = document.querySelector('.close-icon');
    const body = document.body;
    
    if (menuButton && mobileMenu) {
      // Toggle menu
      menuButton.addEventListener('click', function() {
        const isOpen = !mobileMenu.classList.contains('translate-x-full');
        
        if (isOpen) {
          // Close menu
          mobileMenu.classList.add('translate-x-full');
          body.classList.remove('overflow-hidden');
          hamburgerIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
          menuButton.setAttribute('aria-expanded', 'false');
        } else {
          // Open menu
          mobileMenu.classList.remove('translate-x-full');
          body.classList.add('overflow-hidden');
          hamburgerIcon.classList.add('hidden');
          closeIcon.classList.remove('hidden');
          menuButton.setAttribute('aria-expanded', 'true');
        }
      });
      
      // Close menu when clicking a link
      mobileMenuLinks.forEach(link => {
        link.addEventListener('click', function() {
          mobileMenu.classList.add('translate-x-full');
          body.classList.remove('overflow-hidden');
          hamburgerIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
          menuButton.setAttribute('aria-expanded', 'false');
        });
      });
      
      // Close menu when clicking outside
      mobileMenu.addEventListener('click', function(e) {
        if (e.target === mobileMenu) {
          mobileMenu.classList.add('translate-x-full');
          body.classList.remove('overflow-hidden');
          hamburgerIcon.classList.remove('hidden');
          closeIcon.classList.add('hidden');
          menuButton.setAttribute('aria-expanded', 'false');
        }
      });
    }
  });
  
  // Scroll background effect
  window.addEventListener('scroll', function() {
    const header = document.getElementById('header');
    
    if (window.scrollY > 50) {
      // Add background when scrolled
      header.classList.remove('bg-transparent');
      header.classList.add('bg-charcoal-800', 'bg-opacity-95', 'backdrop-blur-md', 'shadow-lg');
    } else {
      // Remove background when at top
      header.classList.remove('bg-charcoal-800', 'bg-opacity-95', 'backdrop-blur-md', 'shadow-lg');
      header.classList.add('bg-transparent');
    }
  });
</script>

<style>
  /* Prevent body scroll when mobile menu is open */
  body.overflow-hidden {
    overflow: hidden;
    position: fixed;
    width: 100%;
  }
  
  /* Smooth icon transitions */
  .mobile-menu-button svg {
    transition: all 0.3s ease-in-out;
  }
  
  /* Add subtle animation to menu links */
  .mobile-menu-link {
    animation: fadeInUp 0.3s ease-out backwards;
  }
  
  .mobile-menu-link:nth-child(1) { animation-delay: 0.1s; }
  .mobile-menu-link:nth-child(2) { animation-delay: 0.15s; }
  .mobile-menu-link:nth-child(3) { animation-delay: 0.2s; }
  .mobile-menu-link:nth-child(4) { animation-delay: 0.25s; }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
