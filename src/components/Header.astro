<!-- DEPENDENCIES (Fonts) -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">

<style>
  /* 1. TYPOGRAPHY */
  .font-sans { font-family: 'Inter', sans-serif; }

  /* 2. HEADER TRANSITIONS */
  #main-header {
    transition: all 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
  }

  /* 3. SCROLLED STATE (Dark Glass) */
  #main-header.is-scrolled {
    background: rgba(5, 5, 5, 0.85); /* Obsidian with transparency */
    backdrop-filter: blur(12px);      /* Frosted glass effect */
    border-bottom: 1px solid rgba(255, 255, 255, 0.08); /* Subtle separator */
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }
  
  /* Initial state padding for "breathing room" at top of page */
  #main-header:not(.is-scrolled) {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid transparent;
  }

  /* 4. BUTTON: Liquid Fill (Mini Version for Header) */
  .btn-header {
    position: relative;
    overflow: hidden;
    background: transparent;
    color: #F3F1EC;
    border: 3px solid rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
  }
  
  /* The fill layer */
  .btn-header::before {
    content: '';
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background: #F3F1EC;
    transform: translateY(100%);
    transition: transform 0.4s cubic-bezier(0.19, 1, 0.22, 1);
    z-index: 0;
  }
  
  .btn-header:hover::before {
    transform: translateY(0);
  }
  
  .btn-header span {
    position: relative;
    z-index: 1;
    transition: color 0.3s;
  }
  
  .btn-header:hover span {
    color: #050505; /* Text turns dark on hover */
  }
</style>

<header
  id="main-header"
  class="fixed top-0 w-full z-50 bg-transparent"
>
  <nav class="max-w-7xl mx-auto px-6 lg:px-8 mb-12">
    <div class="flex justify-between items-center h-16">
      
      <!-- Logo -->
      <a href="/" class="flex items-center group relative z-50">
        <!-- Assuming your SVG is white or can be inverted via CSS filter if needed -->
        <img src="/Logo6.svg" alt="4RealtyAI Logo" class="h-10 w-auto transition-transform duration-300 group-hover:scale-105" />
      </a>

      <!-- Desktop CTA -->
      <div class="hidden md:flex items-center">
        <a
          href="https://calendly.com/4realtyai/30min"
          target="_blank"
          rel="noopener noreferrer"
          class="btn-header px-6 py-2.5 rounded-full"
        >
          <span class="font-sans font-medium text-sm tracking-wide">Schedule Consultation</span>
        </a>
      </div>

      <!-- Mobile CTA (Icon + Text) -->
      <a
        href="https://calendly.com/4realtyai/30min"
        target="_blank"
        rel="noopener noreferrer"
        class="md:hidden btn-header px-4 py-2 rounded-full flex items-center gap-2"
      >
        <span class="font-sans font-medium text-xs tracking-wide">Book Call</span>
      </a>

    </div>
  </nav>
</header>

<script>
  // Handle Scroll Effect
  const header = document.getElementById("main-header");
  
  const handleScroll = () => {
    if (window.scrollY > 20) {
      header.classList.add("is-scrolled");
    } else {
      header.classList.remove("is-scrolled");
    }
  };

  // Listen for scroll
  window.addEventListener("scroll", handleScroll);
  
  // Trigger once on load in case user refreshes mid-page
  handleScroll();
</script>
