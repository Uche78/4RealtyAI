---
// Features section component
---

<!-- Features Section -->
<section class="py-24 bg-cream-50 text-brand-text">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Section Header -->
    <div class="text-center mb-16">
     <div class="inline-flex items-center px-4 py-2 text-charcoal-500 text-sm font-sans font-normal mb-6">
        AI Tools
      </div>
      <h2 class="text-4xl lg:text-5xl font-medium text-brand-text mb-6 tracking-tight">
        AI-Powered Real Estate Tools
      </h2>
      <p class="text-lg font-sans max-w-3xl mx-auto">
        Transform your Toronto real estate business with our complete suite of AI tools designed specifically for agents and mortgage brokers.
      </p>
    </div>

    <!-- Featured Product: ShowSmart™ -->
    <div class="mb-20">
      <div class="bg-brand-primary rounded-2xl p-8 lg:p-12 border border-warm-300 relative">

       <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
              <span class="bg-slate-700 text-brand-primary px-3 py-1 rounded-full text-xs font-medium">
                Launch Product
              </span>
            </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          
          <!-- Featured Product Content -->
          <div class="space-y-6">
            <div class="inline-flex items-center text-brand-primary text-sm font-sans font-normal bg-slate-700 px-4 py-2 rounded-full">
              Featured Product
            </div>
            
            <div class="flex items-center space-x-4">
              <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center">
                <svg class="w-8 h-8 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                </svg>
              </div>
              <div>
                <h3 class="text-3xl font-medium text-brand-text">ShowSmart™</h3>
                <p class="text-slate-700 font-sans">"Your Always-On Showing Assistant"</p>
              </div>
            </div>
            
            <div class="space-y-3">
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                <p class="font-sans">Captures leads 24/7 when you're unavailable</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                <p class="font-sans">Answers property questions instantly using your website content</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                <p class="font-sans">Books showings automatically in your calendar</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                <p class="font-sans">Learns buyer preferences and sends matching listings</p>
              </div>
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                <p class="font-sans">Turns every website visitor into a potential client</p>
              </div>
            </div>
          </div>
          
          <!-- Social Proof -->
          <div class="bg-cream-50 rounded-xl p-6 border border-warm-300">
            <div class="flex items-start space-x-4">
              <div class="w-12 h-12 bg-slate-700 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-brand-primary" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                  <path fill-rule="evenodd" d="M18 10c0 3.866-3.582 7-8 7a8.841 8.841 0 01-4.083-.98L2 17l1.338-3.123C2.493 12.767 2 11.434 2 10c0-3.866 3.582-7 8-7s8 3.134 8 7zM7 9H5v2h2V9zm8 0h-2v2h2V9zM9 9h2v2H9V9z" clip-rule="evenodd"></path>
                </svg>
              </div>
              <div>
                <p class="font-serif italic text-brand-text mb-3">
                  "ShowSmart™ helped me capture 3 new buyers last week while I was on vacation. The AI knew my listings better than most agents!"
                </p>
                <p class="font-sans text-sm font-medium text-slate-700">
                  - Sarah M., Top Producer
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Complete Product Suite -->
    <div class="space-y-16">
      
      <!-- Lead Generation & Marketing Section -->
      <div>
        <h3 class="text-2xl font-medium text-brand-text mb-8 text-center">
          Lead Generation & Marketing
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          
          <!-- LeadBoost™ -->
          <div class="bg-brand-primary rounded-xl p-6 border border-warm-300 text-center">
            <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-medium text-brand-text mb-2">LeadBoost™</h4>
            <p class="text-sm font-sans text-warm-600">AI Property Listing Generator</p>
          </div>
          
          <!-- SocialSpark™ -->
          <div class="bg-brand-primary rounded-xl p-6 border border-warm-300 text-center">
            <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 4v12a2 2 0 002 2h6a2 2 0 002-2V8M7 8h10M10 12h4"></path>
              </svg>
            </div>
            <h4 class="text-lg font-medium text-brand-text mb-2">SocialSpark™</h4>
            <p class="text-sm font-sans text-warm-600">AI Social Media Auto-Creator</p>
          </div>
          
          <!-- AdGenie™ -->
          <div class="bg-brand-primary rounded-xl p-6 border border-warm-300 text-center">
            <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-medium text-brand-text mb-2">AdGenie™</h4>
            <p class="text-sm font-sans text-warm-600">AI Ad Campaign Builder</p>
          </div>
          
          <!-- MarketVision™ -->
          <div class="bg-brand-primary rounded-xl p-6 border border-warm-300 text-center">
            <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-medium text-brand-text mb-2">MarketVision™</h4>
            <p class="text-sm font-sans text-warm-600">AI Neighborhood Insights</p>
          </div>
        </div>
      </div>
      
      <!-- Client Experience Section -->
      <div>
        <h3 class="text-2xl font-medium text-brand-text mb-8 text-center">
          Client Experience
        </h3>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          
          <!-- ShowSmart™ (Launch Product) -->
          <div class="bg-brand-primary rounded-xl p-6 border-2 border-slate-700 text-center relative">
            <div class="absolute -top-3 left-1/2 transform -translate-x-1/2">
              <span class="bg-slate-700 text-brand-primary px-3 py-1 rounded-full text-xs font-medium">
                Launch Product
              </span>
            </div>
            <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center mx-auto mb-4 mt-4">
              <svg class="w-8 h-8 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
              </svg>
            </div>
            <h4 class="text-lg font-medium text-brand-text mb-2">ShowSmart™</h4>
            <p class="text-sm font-sans text-warm-600">AI Chat Assistant</p>
          </div>
          
          <!-- HomeMatch™ -->
          <div class="bg-brand-primary rounded-xl p-6 border border-warm-300 text-center">
            <div class="w-16 h-16 bg-slate-700 rounded-xl flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 19v-8.93a2 2 0 01.89-1.664l7-4.666a2 2 0 012.22 0l7 4.666A2 2 0 0121 10.07V19M3 19a2 2 0 002 2h14a2 2 0 002-2M3 19l6.75-4.5M21 19l-6.75-4.5M12 12v7"></path>
