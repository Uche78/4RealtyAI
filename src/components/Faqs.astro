<script>
  document.addEventListener('DOMContentLoaded', function() {
    const faqItems = document.querySelectorAll('.faq-item') as NodeListOf<HTMLElement>;
    
    faqItems.forEach(item => {
      const question = item.querySelector('.faq-question') as HTMLButtonElement | null;
      const answer = item.querySelector('.faq-answer') as HTMLElement | null;
      const icon = item.querySelector('.faq-icon') as HTMLElement | null;
      
      question?.addEventListener('click', function() {
        const isOpen = question.getAttribute('aria-expanded') === 'true';
        
        // Close all other FAQ items
        faqItems.forEach(otherItem => {
          if (otherItem !== item) {
            const otherQuestion = otherItem.querySelector('.faq-question') as HTMLButtonElement | null;
            const otherAnswer = otherItem.querySelector('.faq-answer') as HTMLElement | null;
            const otherIcon = otherItem.querySelector('.faq-icon') as HTMLElement | null;
            
            if (otherAnswer && otherQuestion && otherIcon) {
              otherAnswer.style.maxHeight = '0px';
              otherQuestion.setAttribute('aria-expanded', 'false');
              otherIcon.style.transform = 'rotate(0deg)';
            }
          }
        });
        
        // Toggle current item
        if (answer && icon) {
          if (isOpen) {
            answer.style.maxHeight = '0px';
            question.setAttribute('aria-expanded', 'false');
            icon.style.transform = 'rotate(0deg)';
          } else {
            answer.style.maxHeight = answer.scrollHeight + 'px';
            question.setAttribute('aria-expanded', 'true');
            icon.style.transform = 'rotate(180deg)';
          }
        }
      });
    });
  });
</script>


<style>
  /* Smooth transitions for accordion */
  .faq-answer {
    transition: max-height 0.3s ease-in-out;
  }
  
  .faq-icon {
    transition: transform 0.3s ease-in-out;
  }
  
  /* Hover effect for FAQ items */
  .faq-item:hover {
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }
  
  /* Better touch targets for mobile */
  @media (max-width: 640px) {
    .faq-question {
      min-height: 48px; /* Ensure minimum touch target size */
    }
  }
  
  /* Prevent text selection on double tap */
  .faq-question {
    -webkit-tap-highlight-color: transparent;
    user-select: none;
  }
</style>
