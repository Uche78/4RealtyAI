<!-- SCROLL REVEAL SCRIPT -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Re-using the logic from previous sections for consistency
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          // Add a class to un-hide content
          entry.target.classList.add('opacity-100', 'translate-y-0');
          entry.target.classList.remove('opacity-0', 'translate-y-10');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.1 });

    const items = document.querySelectorAll('.reveal-group');
    items.forEach((item) => {
      // Set initial state
      item.classList.add('transition-all', 'duration-1000', 'ease-out', 'opacity-0', 'translate-y-10');
      observer.observe(item);
    });
  });
</script>