<style>
  /* 1. TYPOGRAPHY & COLORS */
  .font-serif { font-family: 'Playfair Display', serif; }
  .font-sans { font-family: 'Inter', sans-serif; }
  
  /* 2. TIMELINE BENTO CARD */
  .timeline-card {
    background: #e7e5e0; /* Beige */
    padding: 2.5rem;
    border-radius: 1rem;
    position: relative;
    transition: all 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    z-index: 10;
  }
  
  .timeline-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px -10px rgba(44, 44, 44, 0.08);
    background: #e1dfda;
  }

  /* Success State Card (Dark) */
  .timeline-card-dark {
    background: #1f1f1f; /* Charcoal */
    color: #F3F1EC;
  }
  .timeline-card-dark:hover {
    box-shadow: 0 20px 40px -10px rgba(44, 44, 44, 0.25);
    background-color: #1c1c1c;
  }

  /* 3. THE TIMELINE SPINE (Desktop Only) */
  .timeline-spine {
    position: absolute;
    left: 50%;
    top: 0;
    bottom: 0;
    width: 1px;
    background: rgba(44, 44, 44, 0.1);
    transform: translateX(-50%);
    z-index: 0;
    display: none;
  }
  
  /* Connector Dots on the Spine */
  .spine-dot {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 12px;
    height: 12px;
    background: #F3F1EC; /* Matches section BG */
    border: 1px solid rgba(44, 44, 44, 0.3);
    border-radius: 50%;
    z-index: 5;
  }
  
  /* Active Spine Dot (filled) */
  .spine-dot-filled {
    background: #2c2c2c;
    border-color: #2c2c2c;
  }

  @media (min-width: 768px) {
    .timeline-spine { display: block; }
  }

  /* 4. TIME PILL */
  .time-pill {
    font-family: 'Inter', sans-serif;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    padding: 0.25rem 0.75rem;
    border-radius: 99px;
    border: 1px solid rgba(44, 44, 44, 0.1);
    background: rgba(255, 255, 255, 0.4);
    display: inline-block;
    margin-bottom: 1.5rem;
  }
</style>

