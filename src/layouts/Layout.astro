---
export interface Props {
  title: string;
  description?: string;
}
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description = "AI-powered tools for real estate professionals. Boost leads, automate client experience, and dominate your market with 4RealtyAI." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700;800&family=Source+Serif+Pro:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600;700&family=Montserrat:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- SEO -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://4realtyai.com" />
    <meta name="twitter:card" content="summary_large_image" />
    
    <title>4RealtyAI</title>
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-0N6K6TC3X7"></script>
    <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'G-0N6K6TC3X7');
    </script>
  </head>
  <Header />
  <body class="font-serif text-brand-text bg-transparent">
    <slot />
    <elevenlabs-convai agent-id="agent_9801kd2d5hvjevmvdzg2jx4cp25j"></elevenlabs-convai><script src="https://unpkg.com/@elevenlabs/convai-widget-embed" async type="text/javascript"></script>
  </body>
  <Footer />
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    line-height: 1.6;
  }
  
  .animate-float {
    animation: float 6s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }
</style>
