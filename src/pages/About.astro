---
// src/pages/About.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="About Us | 4RealtyAI">
  
  <!-- 1. ASSETS & STYLES -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">

  <style>
    /* TYPOGRAPHY */
    .font-serif { font-family: 'Playfair Display', serif; }
    .font-sans { font-family: 'Inter', sans-serif; }

    /* TEXTURES */
    .bg-noise {
      position: absolute; inset: 0; pointer-events: none; z-index: 0; opacity: 0.05;
      background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 200 200' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    }

    /* OBSIDIAN CARD (Dark) */
    .obsidian-card {
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 1rem;
      padding: 2.5rem;
      transition: all 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
      position: relative;
      overflow: hidden;
    }
    .obsidian-card:hover {
      background: rgba(255, 255, 255, 0.06);
      border-color: rgba(255, 255, 255, 0.2);
      transform: translateY(-5px);
    }

    /* GLANCE BENTO CARD */
  .glance-card {
    background: #e7e5e0; /* Beige */
    padding: 2.5rem;
    border-radius: 1rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    transition: all 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    position: relative;
    overflow: hidden;
  }
  
  .glance-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px -10px rgba(44, 44, 44, 0.08);
    background: #e1dfda;
  }

    /* GRID UTILS */
  .glance-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }
  @media (min-width: 768px) {
    .glance-grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (min-width: 1024px) {
    .glance-grid { grid-template-columns: repeat(3, 1fr); }
  }

    /* ANIMATIONS */
    .reveal-mask { overflow: hidden; display: block; }
    .reveal-text { display: block; will-change: transform; }
    
    /* LIST STYLING */
    .check-list li {
      display: flex;
      align-items: flex-start;
      gap: 1rem;
      margin-bottom: 1rem;
  
      font-family: 'Inter', sans-serif;
      font-size: 0.95rem;
    }
    .check-list li svg {
      flex-shrink: 0;
      margin-top: 0.25rem;
      color: [#2c2c2c];
    }

    .reveal-text {
  display: inline-flex;
  justify-content: center;
  align-items: center;
}
  </style>

  <!-- ============================================ -->
  <!-- SECTION 1: INTRO (Dark Obsidian Hero) -->
  <!-- Content: Short SEO Version -->
  <!-- ============================================ -->
  <section class="relative pt-32 pb-24 px-6 bg-[#050505] text-white overflow-hidden min-h-[85vh] flex items-center">
    <!-- Atmosphere -->
  <div class="bg-noise"></div>
  <!-- Top Center Silver Glow -->
  <div class="glow-white top-0 left-1/2 -translate-x-1/2 -translate-y-1/2"></div>
  <div class="absolute inset-0 opacity-10 bg-[radial-gradient(#fff_1px,transparent_1px)] [background-size:16px_16px]"></div>
  <div class="glow-effect"></div>
    
    <!-- Atmospheric Glow -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] bg-white/5 rounded-full blur-[150px] pointer-events-none"></div>
    

    <div class="relative z-10 max-w-5xl mx-auto text-center">
      
      <!-- Label -->
      <div class="reveal-mask mb-8 flex justify-center">
         <div class="reveal-text w-fit !text-center inline-flex items-center justify-center px-4 py-1.5 border border-white/10 rounded-full bg-white/5 backdrop-blur-sm">
           <span class="text-[11px] font-sans font-medium text-white/70 uppercase tracking-[0.2em]">About 4RealtyAI</span>
         </div>
      </div>
      
      <!-- Headline -->
      <h1 class="font-serif text-5xl md:text-6xl lg:text-7xl leading-[1.1] mb-8">
        <span class="reveal-mask"><span class="reveal-text">Revenue Growth.</span></span>
        <span class="reveal-mask"><span class="reveal-text italic text-white/60">Not Experiments.</span></span>
      </h1>

      <!-- Subheadline -->
      <div class="max-w-3xl mx-auto mb-12">
        <div class="reveal-mask">
          <p class="reveal-text font-sans text-lg md:text-xl text-white/70 leading-relaxed font-light">
            We are an AI consulting and implementation firm built for real estate professionals. We design systems that capture leads, automate engagement, and integrate seamlessly with your workflow.
          </p>
        </div>
      </div>

      <!-- Trust Badges (The "Field Tested" line) -->
      <div class="flex flex-wrap justify-center gap-6 md:gap-12 reveal-group opacity-0 translate-y-10">
        <div class="flex items-center gap-3">
          <div class="w-1.5 h-1.5 bg-white rounded-full"></div>
          <span class="font-sans text-sm tracking-wide text-white/60 uppercase">Field-Tested in GTA</span>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-1.5 h-1.5 bg-white rounded-full"></div>
          <span class="font-sans text-sm tracking-wide text-white/60 uppercase">Performance Based</span>
        </div>
        <div class="flex items-center gap-3">
          <div class="w-1.5 h-1.5 bg-white rounded-full"></div>
          <span class="font-sans text-sm tracking-wide text-white/60 uppercase">Clean Infrastructure</span>
        </div>
      </div>

    </div>
  </section>

  <!-- ============================================ -->
  <!-- SECTION 2: FOUNDER'S STORY (Light Linen) -->
  <!-- Content: Narrative / Vision -->
  <!-- ============================================ -->
  <section class="py-32 px-6 bg-[#F3F1EC] text-[#2c2c2c] overflow-hidden">
    <div class="max-w-7xl mx-auto">
      
      <!-- Editorial Header -->
      <div class="mb-16 border-l-2 border-[#2c2c2c]/10 pl-8 reveal-group">
        <p class="font-sans text-xs font-bold uppercase tracking-widest text-[#2c2c2c]/40 mb-4">The Origin Story</p>
        <h2 class="font-serif text-4xl md:text-5xl text-[#2c2c2c] mb-6 leading-tight">
          Why 4RealtyAI Exists
        </h2>
      </div>

      <!-- Narrative Content -->
      <div class="space-y-12 reveal-group" style="transition-delay: 100ms;">
        
        <!-- The Problem Statement -->
        <p class="font-sans text-lg text-[#2c2c2c]/80 leading-relaxed">
          4RealtyAI was founded on a simple observation: <br/>
          <span class="font-serif text-2xl md:text-3xl italic text-[#2c2c2c] block my-6 border-y border-[#2c2c2c]/10 py-6">
            "AI wasn’t failing real estate professionals — implementation was."
          </span>
        </p>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
          <!-- Column 1 -->
          <div class="space-y-6">
            <p class="font-sans text-base text-[#2c2c2c]/70 leading-relaxed">
              Across brokerages and teams, tools were being purchased but never adopted. CRMs were fragmented. Data was unreliable. AI projects stalled because no one owned the outcome. The result? Wasted spend, frustrated teams, and zero revenue impact.
            </p>
            <p class="font-sans text-base text-[#2c2c2c]/70 leading-relaxed">
              The vision behind 4RealtyAI was to change that.
            </p>
          </div>

          <!-- Column 2 -->
          <div class="space-y-6">
            <p class="font-sans text-base text-[#2c2c2c]/70 leading-relaxed">
              Instead of selling software or billing endless consulting hours, we built a <strong class="text-[#2c2c2c]">results-first model</strong> — one where success is measured in revenue, time saved, and operational clarity.
            </p>
            <p class="font-sans text-base text-[#2c2c2c]/70 leading-relaxed">
              We believe AI should work quietly in the background — capturing leads, engaging clients, and surfacing insights — while professionals focus on what actually closes deals: <strong class="text-[#2c2c2c]">relationships and trust.</strong>
            </p>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- ============================================ -->
  <!-- SECTION 3: AT A GLANCE (Dark Obsidian Bento) -->
  <!-- Content: Pitch Deck / Technical -->
  <!-- ============================================ -->
  <section class="py-24 px-6 bg-[#F3F1EC] text-[#2c2c2c] overflow-hidden relative">
    <div class=""></div>
    <div class="max-w-7xl mx-auto relative z-10">
      
      <div class="mb-16 reveal-group">
        <h2 class="font-serif text-4xl md:text-5xl mb-4">At a Glance</h2>
        <p class="font-sans text-[#2c2c2c]/70 max-w-2xl">
          While over 80% of firms are piloting AI, fewer than 5% generate meaningful revenue from it. We close that gap.
        </p>
      </div>

      <!-- Bento Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 auto-rows-fr">
        
        <!-- Tile 1: Closing the Gap (Large) -->
        <div class="glance-card md:col-span-2 reveal-group">
          <h3 class="font-serif text-2xl mb-6 text-[#2c2c2c]">Closing the Execution Gap</h3>
          <div class="grid md:grid-cols-2 gap-x-8 gap-y-2">
            <ul class="check-list text-[#2c2c2c]/70">
              <li>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                Auditing data infrastructure & workflows
              </li>
              <li>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                Identifying high-ROI AI opportunities
              </li>
              <li>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                Implementing production-ready systems
              </li>
            </ul>
            <ul class="check-list text-[#2c2c2c]/70">
              <li>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                Driving adoption through accountability
              </li>
              <li>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                Aligning incentives via revenue share
              </li>
            </ul>
          </div>
        </div>

        <!-- Tile 2: Business Model -->
        <div class="glance-card reveal-group" style="transition-delay: 100ms;">
          <h3 class="font-serif text-2xl mb-6 text-[#2c2c2c]">Business Model</h3>
          <ul class="space-y-4">
            <li class="flex items-center justify-between border-b border-[#2c2c2c]/10 pb-2">
              <span class="font-sans text-sm text-[#2c2c2c]/70">Setup</span>
              <span class="font-sans text-sm font-medium text-[#2c2c2c]">One-time Fee</span>
            </li>
            <li class="flex items-center justify-between border-b border-[#2c2c2c]/10 pb-2">
              <span class="font-sans text-sm text-[#2c2c2c]/70">Ongoing</span>
              <span class="font-sans text-sm font-medium text-[#2c2c2c]">Revenue Share</span>
            </li>
            <li class="flex items-center justify-between border-b border-[#2c2c2c]/10 pb-2">
              <span class="font-sans text-sm text-[#2c2c2c]/70">Contracts</span>
              <span class="font-sans text-sm font-medium text-[#2c2c2c]">Month-to-Month</span>
            </li>
            <li class="flex items-center justify-between pt-2">
              <span class="font-sans text-sm text-[#2c2c2c]/70">Risk</span>
              <span class="font-sans text-sm font-medium text-[#2c2c2c]">Zero (Results Based)</span>
            </li>
          </ul>
        </div>

        <!-- Tile 3: Competitive Advantage -->
        <div class="glance-card reveal-group" style="transition-delay: 200ms;">
          <h3 class="font-serif text-2xl mb-6 text-[#2c2c2c]">Competitive Edge</h3>
          <div class="space-y-4">
            <div>
              <p class="font-sans text-xs text-[#2c2c2c]/40 uppercase tracking-wider mb-1">Focus</p>
              <p class="font-sans text-sm text-[#2c2c2c]/90">Deep implementation (Not just SaaS)</p>
            </div>
            <div>
              <p class="font-sans text-xs text-[#2c2c2c]/40 uppercase tracking-wider mb-1">Specialization</p>
              <p class="font-sans text-sm text-[#2c2c2c]/90">Real Estate & Mortgage Exclusive</p>
            </div>
            <div>
              <p class="font-sans text-xs text-[#2c2c2c]/40 uppercase tracking-wider mb-1">Alignment</p>
              <p class="font-sans text-sm text-[#2c2c2c]/90">Incentives tied to your revenue</p>
            </div>
          </div>
        </div>

        <!-- Tile 4: Vision (Wide) -->
        <div class="glance-card md:col-span-2 lg:col-span-2 flex flex-col justify-center reveal-group" style="transition-delay: 300ms;">
           <span class="font-sans text-xs font-bold uppercase tracking-widest text-[#2c2c2c]/40 mb-4">The Vision</span>
           <p class="font-serif text-2xl md:text-3xl text-[#2c2c2c] leading-tight">
             To become the trusted AI operating partner for real estate professionals — enabling smarter growth, cleaner operations, and defensible competitive advantage.
           </p>
        </div>

      </div>
    </div>
  </section>

  <!-- SCRIPT: ANIMATIONS -->
  <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
  <script is:inline src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollTrigger.min.js"></script>
  
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
        gsap.registerPlugin(ScrollTrigger);

        // Hero Reveal
        const revealTexts = document.querySelectorAll('.reveal-text');
        if (revealTexts.length > 0) {
          gsap.from(revealTexts, {
            y: "120%",
            duration: 1.5,
            stagger: 0.1,
            ease: "power4.out",
            delay: 0.2
          });
        }

        // Section Reveals
        const groups = document.querySelectorAll('.reveal-group');
        groups.forEach((group) => {
          gsap.fromTo(group, 
            { opacity: 0, y: 30 },
            {
              opacity: 1, y: 0,
              duration: 1,
              ease: "power2.out",
              scrollTrigger: {
                trigger: group,
                start: "top 85%",
                toggleActions: "play none none reverse"
              }
            }
          );
        });
      }
    });
  </script>

</Layout>
